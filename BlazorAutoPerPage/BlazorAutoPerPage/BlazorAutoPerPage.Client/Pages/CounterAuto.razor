@page "/counterauto"
@rendermode InteractiveAuto

<PageTitle>Counter Auto</PageTitle>

<h1>Counter Interactive Auto</h1>

<p role="status">Current count: @currentCount</p>

<p>Where Am I : @_location</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
   
    private string _location = "I don't know";
    
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
   

    protected override void OnInitialized()
    {
        _location = OperatingSystem.IsBrowser() ? "On the client" : "On the server";
        base.OnInitialized();
    }
}
